modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chat Example"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mock Ollama Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SVG Header Check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Implementation Check"

[[workflows.workflow]]
name = "Chat Example"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/chat.py"

[[workflows.workflow]]
name = "Mock Ollama Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python mock_server/server.py"
waitForPort = 11434

[[workflows.workflow]]
name = "SVG Header Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cat header.svg"

[[workflows.workflow]]
name = "Implementation Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la examples/ && cat header.svg"

[deployment]
run = ["sh", "-c", "python examples/chat.py"]

[[ports]]
localPort = 11434
externalPort = 80
